# Xpresspay API credentials
# Copy this file to .env and fill in your values from the Xpresspay dashboard:
# Settings > API > API Keys

# Public key — safe to use client-side; only creates transactions
XPRESSPAY_PUBLIC_KEY=XPPUBK-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X

# Secret key — server-side only; used for local 3DES encryption, never transmitted
XPRESSPAY_SECRET_KEY=XPSECK-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X

# Set to "true" for sandbox (development) or "false" for live (production)
XPRESSPAY_SANDBOX=true
